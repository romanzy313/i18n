---
const i18n = Astro.locals.i18n;

const otherLocales = i18n.otherLocales;

// need ability to rewrite the url, like to keep current page but change the first segment
---

<div class="main">
  <a href={`/${i18n.locale}`} class="disabled">{i18n.locale}</a>
  {otherLocales.map((locale) => <a href={`/${locale}`}>{locale}</a>)}
</div>

<style>
  .main {
    display: flex;
    gap: 1rem;
  }
  .disabled {
    pointer-events: none;
    opacity: 0.5;
  }
</style>
